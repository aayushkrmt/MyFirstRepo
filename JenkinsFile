pipeline {
    agent any
    environment {
        ansible_playbook = 'ansible1.yml'
    }
    stages {
        stage ('Clone Git Repository') {
            steps {
                script {
                    // The repository and branch details are managed by SCM, no need to clone here
                    git url: 'https://github.com/aayushkrmt/MyFirstRepo.git', branch: 'master', credentialsId: '1cdc3b6a-b0d8-4f91-9490-2668cc5251e6'
                }
            }
        }
        stage('Install Ansible') {
            steps {
                script {
                    sh '''
                    sudo yum install python-pip -y
                    sudo amazon-linux-extras install ansible2 -y
                    '''
                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh '''
                    ansible-playbook --become ${ansible_playbook}
                    '''
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline executed successfully.'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
